{
  "name": "hap-learning-lab-template",
  "version": "1.0.0",
  "description": "HAP Learning Lab template with 6 customizable stations",
  "scripts": {
    "lh": "lighthouse http://localhost:5500 --view",
    "lh:mobile": "lighthouse http://localhost:5500 --preset=mobile --view",
    "lh:desktop": "lighthouse http://localhost:5500 --preset=desktop --view",
    "lh:report": "lighthouse http://localhost:5500 --output=html --output-path=./reports/report.html",
    "lh:json": "lighthouse http://localhost:5500 --output=json --output-path=./reports/data.json",
    "lh:both": "lighthouse http://localhost:5500 --output=html --output=json --output-path=./reports/audit",
    "lh:accessibility": "lighthouse http://localhost:5500 --only-categories=accessibility --view",
    "lh:performance": "lighthouse http://localhost:5500 --only-categories=performance --view"
  },
  "keywords": [
    "education",
    "web-development",
    "lighthouse",
    "accessibility",
    "performance"
  ],
  "author": "Prof. Cynthia Teeters",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "lighthouse": "^13.0.0",
    "@lhci/cli": "^0.15.1"
  }
}